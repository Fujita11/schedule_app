<div class="main schedules-new">
  <div class="container">
    <h1 class="form-heading">新規スケジュール</h1>
    
    <%= form_with(model: @schedule, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title, 'タイトル' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :start_date, '開始日' %>
        <%= form.text_field :start_date, class: 'form-control', id: 'start_date' %>
      </div>
      
      <div class="form-group">
        <%= form.label :end_date, '終了日' %>
        <%= form.text_field :end_date, class: 'form-control', id: 'end_date' %>
      </div>
      
      <div class="form-group">
        <%= form.label :content, 'スケジュールメモ' %>
        <%= form.text_area :content, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.submit '作成', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
