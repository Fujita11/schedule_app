<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">予定の新規追加</h1>

    <%= form_with(model: @post, local: true) do |f| %>
      <div class="form-body">
        <div class="form-group">
          <%= f.label :content, "タイトル", class: 'control-label' %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :start_datetime, "開始日", class: 'control-label' %>
          <%= f.date_field :start_datetime, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :end_datetime, "終了日", class: 'control-label' %>
          <%= f.date_field :end_datetime, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :is_all_day, "終日の場合はチェックを入れます", class: 'control-label' %>
          <%= f.check_box :is_all_day, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :memo, "スケジュールメモ", class: 'control-label' %>
          <%= f.text_area :memo, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= link_to 'キャンセル', posts_path, class: 'btn btn-secondary' %>
          <%= f.submit "送信", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>